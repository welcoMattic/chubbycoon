{% extends 'base.html.twig' %}

{% block body %}
    {{ include('_header.html.twig') }}

    <div class="container px-0">
        <div class="row mb-3">
            <div class="col-sm-12">
                <a href="{{ path('article_list') }}">
                    <i class="fa fa-arrow-left"></i>&nbsp;Retour Ã  la liste des articles
                </a>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-8">
                <h2 class="mb-5">
                    {{ article.title }}
                    {% for category in article.categories %}
                        <span class="badge badge-light">{{ category.name }}</span>
                    {% endfor %}
                </h2>
                {% if article.thumbnail is not null %}
                    <p>
                        <img src="{{ article.thumbnail }}" alt="{{ article.title }}" width="100%">
                    </p>
                {% endif %}
                <p>
                    {{ article.content|raw }}
                </p>
            </div>
            <div class="col-sm-3 offset-sm-1">
                <h3>Articles similaires</h3>
                <ul class="list-unstyled">
                    {% for relatedArticle in relatedArticles %}
                        <li>
                            <a href="{{ path('article_show', { id: relatedArticle.id }) }}">
                                <i class="fa fa-tag"></i>&nbsp;{{ relatedArticle.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    {{ include('_footer.html.twig') }}
{% endblock %}
