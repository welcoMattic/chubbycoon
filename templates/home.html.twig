<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chubbycoon</title>
</head>
<body>
    <h1>Articles</h1>
    <ul>
        {% for article in articles %}
            <li><a href="{{ path('article_show', {id: article.id}) }}">{{ article.title }}</a> - {{ article.createdAt|localizeddate('long', 'short') }}</li>
        {% endfor %}
    </ul>
</body>
</html>
