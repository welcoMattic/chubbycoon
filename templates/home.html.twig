{% extends 'base.html.twig' %}

{% block body %}
    {{ include('_header.html.twig') }}

    <div class="container p-0">
        <div class="row mb-5">
            <div class="col-sm-12 text-center">
                <h2 class="h1" style="text-shadow: 1px 2px 3px rgba(0,0,0,0.3);">Bienvenue sur le site de Chubbycoon</h2>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-8">
                <div class="card flex-md-row text-white bg-dark mb-4 p-4 h-md-250">
                    <img class="card-img-left flex-auto d-none d-md-block" src="{{ asset('build/images/qui-suis-je.jpg') }}">
                    <div class="card-body d-flex flex-column align-items-start pt-0">
                        <h2 class="h3 mb-4">Qui suis-je ?</h2>
                        <p class="card-text mb-auto">

                        </p>
                        <a href="http://wlcmtc.info/cv-simon-gosselin.pdf" class="btn btn-outline-light px-5 py-2">
                            Consultez mon CV
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card flex-md-row mb-4 p-3 h-md-250">
                    <div class="card-body d-flex flex-column align-items-start pt-0">
                        <h2 class="h3 mb-3 mx-auto">Contactez-moi</h2>
                        <img src="{{ asset('build/images/logo.png') }}" alt="logo chubbycoon" class="mx-auto">
                        <ul class="mb-3 mt-3 mx-auto">
                            <li class="h5 font-weight-normal">Demande d'info</li>
                            <li class="h5 font-weight-normal">Demande de devis</li>
                            <li class="h5 font-weight-normal">Demande de disponibilité</li>
                        </ul>
                        <a href="{{ path('contact') }}" class="btn btn-primary px-5 py-2 mx-auto mb-auto">Me contacter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container px-0">
        <div class="row mb-3">
            <div class="col-sm-12">
                <h2>Mes dernières réalisations</h2>
            </div>
        </div>
        <div class="row mb-2">
            <div class="card-deck px-3 mb-4">
                {% for article in articles %}
                    <div class="card">
                        {% if article.thumbnail is not null %}
                            <a href="{{ path('article_show', { id: article.id }) }}">
                                <img class="card-img-top" src="{{ article.thumbnail }}" alt="{{ article.title }}">
                            </a>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('article_show', { id: article.id }) }}">{{ article.title }}</a>
                                {% for category in article.categories %}
                                    <span class="badge badge-light">{{ category.name }}</span>
                                {% endfor %}
                            </h5>
                            <a href="{{ path('article_show', { id: article.id }) }}">
                                Voir la suite
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a href="{{ path('article_list') }}" class="btn btn-primary btn-lg mt-5 px-5 py-2 mx-auto mb-auto">Toutes mes réalisations</a>
        </div>
    </div>

    {{ include('_footer.html.twig') }}
{% endblock %}
