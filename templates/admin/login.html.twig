{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block page_title %}Restricted Area{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/admin.css') }}">
{% endblock %}

{% block body %}
    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-box-body">
                <h2 class="login-box-msg">Restricted Area</h2>
                <form action="{{ path('admin_login_check') }}" method="post">
                    <div class="form-group has-feedback {% if error %} has-error {% endif %} ">
                        {% if error %}<label class="control-label"><i class="fa fa-times-circle-o"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</label>{% endif %}
                        <label for="username">Email</label>
                        <input type="email" name="_username"  id="username" class="form-control" required value="{{ last_username }}">
                        <span class="fa fa-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback {% if error %} has-error {% endif %} ">
                        <label for="password">Mot de passe</label>
                        <input type="password" id="password" name="_password" required  class="form-control">
                        <span class="fa fa-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-xs-offset-4">
                            <button type="submit" name="_submit" class="btn btn-primary btn-flat">Connexion</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </body>
{% endblock %}
